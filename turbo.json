{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URL", "REDIS_URL", "SESSION_SECRET", "ALLOW_ROLES_MANAGEMENT"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "start": {
      "cache": true,
      "persistent": true
    },
    "prod": {
      "cache": true,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
